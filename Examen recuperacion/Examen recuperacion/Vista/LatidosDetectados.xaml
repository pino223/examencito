<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen_recuperacion.Vista.LatidosDetectados">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Calculadora de Latidos" 
                   FontSize="24" 
                   HorizontalOptions="Center" />
            <Label Text="Ingresa los latidos detectados en 15 segundos:" />
            <Entry Placeholder="Latidos en 15 segundos" 
                   Keyboard="Numeric" 
                   Text="{Binding Latidos15seg}" />
            <Button Text="Calcular Frecuencia" 
                    Command="{Binding CalcularFrecuenciaCommand}" />
            <Label Text="Frecuencia Cardíaca:" FontAttributes="Bold" />
            <Label Text="{Binding FrecuenciaCardiaca}" 
                   FontSize="18" 
                   TextColor="Black" 
                   FontAttributes="Bold" />
            <Label Text="Categoría:" FontAttributes="Bold" />
            <Label Text="{Binding CategoriaFrecuenciaCardiaca}" 
                   FontSize="18" 
                   TextColor="Black" 
                   FontAttributes="Bold" />
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>